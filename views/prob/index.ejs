<div class="col-md-offset-3 col-md-6">
	<br><br>
	<div class="panel panel-default">
	  <!-- Default panel contents -->
	  <div class="panel-heading"><strong><%= prob.title %></strong><span class="label label-success right"><%= prob.score %> points</span></div>
	  <div class="panel-body">
	    <p><%- prob.description %></p>
	  </div>

	  <!-- List group -->
	  <div class="list-group">
	    <% if(user.level != 6 && (!submitted || submitted == undefined)) { %>
	    <a href="<%= __base_url %>/prob/review/<%= prob.id %>" class="list-group-item">
	    	<span class="glyphicon glyphicon-flag" aria-hidden="true"></span>&nbsp;&nbsp;Ask for solution review 
	    </a>
	    <% }else if (submitted && (!complete || complete == undefined)){ %>
	    <div class="list-group-item" style="background-color:#d9edf7">
	    	<span class="glyphicon glyphicon-flag" aria-hidden="true"></span>&nbsp;&nbsp;Pending review
	    </div>
	    <% } else { %>
	    <div class="list-group-item" style="background-color:#dff0d8">
	    	<span class="glyphicon glyphicon-star" aria-hidden="true"></span>&nbsp;&nbsp;Problem complete and reviewed
	    </div>
	    <% } %>
	    <a href="<%= __base_url %>/room/<%= prob.room %>" class="list-group-item">
	    	<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>&nbsp;&nbsp;Back to room 
	    </a>
	  </div>
	</div>
</div>
