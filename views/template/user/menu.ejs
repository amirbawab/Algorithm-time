<div class="row menu">
	<div class="col-md-12">

		<span class="logo-menu col-md-4">
		<img src="<%=__base_url%>/favicon.ico" class="menubar-icon"/>
		&nbsp;&nbsp;&nbsp;&nbsp;<a href="<%=__base_url%>">Algorithm Time</a></span>

		<div class="text-right col-md-8">
			<ul class="nav nav-pills">
				<% if(loggedIn == true) { %>
					<div class='btn-group' style='line-height:40px; float:right; height:40px; margin-left: 2px;'>
					  <button type="button" class="btn btn-default dropdown-toggle clear-btn" style="height:40px"
					  	data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					    <%= user.fullname %>&nbsp;&nbsp; <span class="caret"></span>
					  </button>
					  <ul class="dropdown-menu">
					    <li><a href="#">Profile</a></li>
					    <li role="separator" class="divider"></li>
					    <li><a href="<%=__base_url%>/user/logout">Logout</a></li>
					  </ul>
					</div>
				<% } %>	
				<li role="presentation" 
				<% if(main_page.split("/").pop() == "leaderboard"){ %> class="active" <% } %>
				><a href="<%=__base_url%>/leaderboard">Leaderboard</a></li>
				<li role="presentation" 
				<% if(main_page.split("/").pop() == "index"){ %> class="active" <% } %>
				><a href="<%=__base_url%>">Home</a></li>
			</ul>
		</div>
	</div>
</div>