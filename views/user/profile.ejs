<div class="col-md-offset-2 col-md-8">
	<div class="user-profile">
		<div class="main-title-profile text-center">
			<h3>Total Points</h3>
			<h4><span class="glyphicon glyphicon-star" aria-hidden="true"></span><%= user.score %></h4>
		</div>
		<div class="text-center">
			<h3>My solutions</h3>
			<div class="col-md-offset-2 col-md-8">
				<table class="table table-striped text-left">
					<tr>
						<th>#</th>
						<th>Name</th>
						<th>Points</th>
					</tr>
					<% if(user.problems.length > 0){ %>
						<% for(var i = 0; i < user.problems.length; i++) { %>
							<tr>
								<td><%= (i+1) %></td>
								<td><%= user.problems[i].prob_docs[0].title %></td>
								<td><%= user.problems[i].score %></td>
							</tr>
						<% } %>
					<% }else{ %>
						<tr>
							<td colspan="3">You have yet to tackle any problems</td>
						</tr>
					<% } %>
				<table>
			</div>
		</div>
	</div>
</div>